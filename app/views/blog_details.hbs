  <main id="main-container">
    <!-- Hero Content -->
    <div class="bg-image" style="background-image: url('/img/photos/photo23@2x.jpg');">
      <div class="bg-primary-op">
        <section class="content content-full content-boxed overflow-hidden">
          <!-- Section Content -->
          <div class="push-150-t push-150 text-center">
            <h1 class="text-white push-10" data-toggle="appear" data-class="animated fadeInDown">{{ article.title }}</h1>
