    <!-- Story Content -->
    <div class="bg-white">
      <section class="content content-boxed">
        <!-- Section Content -->
        <div class="text-center">
          <a class="link-effect font-s13 font-w600" href="javascript:void(0)">{{ article.author }}</a> on {{#formate article.ctime}}{{/formate}} &bull; {{!--
          <em>10 min</em> --}}
        </div>
        <div class="row push-50-t push-50 nice-copy-story">
          <div class="col-sm-8 col-sm-offset-2">

            {{!-- rich code --}}
            <div class="editormd-preview">
              <div class="markdown-body editormd-preview-container">
                {{#decode article.content}}{{/decode}}
              </div>
            </div>

            <!-- Actions -->
